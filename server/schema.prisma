datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum GENDER {
    MALE
    FAMALE
    OTHER
}

model User {
    id                Int      @id @default(autoincrement())
    email             String   @unique
    firstName         String
    lastName          String
    hashedPassword    String
    sexualPreference  String
    gender            GENDER
    biography         String?
    profilePictureUrl String?
    fameRating        Int      @default(0)
    createdAt         DateTime @default(now())
    updatedAt         DateTime @updatedAt
    likesSent         Like[]   @relation("sentLikes")
    likesReceived     Like[]   @relation("receivedLikes")
}

model Like {
    id         Int      @id @default(autoincrement())
    senderId   Int
    receiverId Int
    createdAt  DateTime @default(now())

    sender   User @relation("sentLikes", fields: [senderId], references: [id])
    receiver User @relation("receivedLikes", fields: [receiverId], references: [id])
}
